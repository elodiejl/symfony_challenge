{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>




    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="">Panier</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_buyer_profile', {'id': app.user.id}) }}">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h1>Catalogue des Oeuvres en vente</h1>



            <div class="container text-center">
                <div class="row row-cols-12">
                    {% for art in art %}

                        <div class="card col m-3" style="width: 18rem;">
                            <img src="{{ asset('uploads/arts/' ~ art.imageFile) }}" class="card-img-top" alt="...">
                            {% if art.sold is same as false %}
                            <div class="card-body">
                                <h5 class="card-title">{{  art.label }}</h5>
                                <p class="card-text">{{ art.description }}</p>
                                <p class="card-text">{{ art.height }} de hauteur</p>
                                <p class="card-text"> De {{ art.artist }} </p>
                                <p class="card-text">{{ art.price }} € </p>
                                <a href="{{ path('buyer_cart_add', {'id': art.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                                <a class="btn btn-primary" href="{{ path('app_art_show', {'id': art.id}) }}">Voir les détails</a>
                            </div>
                            {% endif %}
                            {% if art.sold is same as true %}
                                <div class="card-body">
                                    <h5 class="card-title">{{  art.label }}</h5>
                                    <p class="card-text">{{ art.description }}</p>
                                    <p class="card-text">{{ art.height }} de hauteur</p>
                                    <p class="card-text"> De {{ art.artist }} </p>
                                    <p class="card-text">VENDUE!</p>

                                </div>
                            {% endif %}
                        </div>

                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}

                </div>
            </div>

{% endblock %}
