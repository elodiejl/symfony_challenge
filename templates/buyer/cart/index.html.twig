{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
 <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('app_buyer_home')}}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('buyer_cart_index')}}">Panier</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_buyer_profile', {'id': app.user.id}) }}">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<section class="bg-light p-3">
    <h1>Votre panier</h1>
</section>

    <table class="table">
        <thead>
        <tr>
            <th>Oeuvre</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataCart %}
            <tr>
                <td>{{ element.oeuvre.label }}</td>
                <td >{{ element.oeuvre.price }} €</td>
                <td>{{ element.oeuvre.description }}</td>
                <td>{{ element.quantity * element.oeuvre.price }} €</td>
                <td>
                    <a href="{{ path('cart_delete', {'id': element.oeuvre.id}) }}" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre panier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td>{{ total }} €</td>
            <td> <a href="{{ path('app_stripe') }}" class="btn btn-danger">
                    Payer
                </a></td>
        </tr>


        </tfoot>
    </table>


{% endblock %}
