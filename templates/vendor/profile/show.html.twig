{% extends 'base.html.twig' %}

{% block title %}Mon Profil ({{user.pseudo}}){% endblock %}

{% block body %}


    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_vendor_home')}}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mes oeuvres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_vendor_profile', {'id': app.user.id}) }}">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h1>MON PROFIL</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>
                {% for role in user.roles %}
                    {% if role == 'ROLE_ADMIN' %}
                        <span class="badge rounded-pill text-bg-primary">Admin</span>
                    {% elseif role == 'ROLE_VENDOR'  %}
                        <span class="badge rounded-pill text-bg-info">Vendeur</span>
                    {% elseif role == 'ROLE_BUYER'%}
                        <span class="badge rounded-pill text-bg-success">Acheteur</span>
                    {% elseif role == 'ROLE_USER' and user.isVerified == false %}
                        <span class="badge rounded-pill text-bg-light">Utilisateur à valider</span>
                    {% endif %}
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>

            <tr>
                <th>Is_verified (a retirer)</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>vendeur (a retirer)</th>
                <td>{{ user.expectation ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('app_buyer_edit', {'id': user.id}) }}" role="button">Modifier mon Profil</a>

    {{ include('buyer/profile/_delete_form.html.twig') }}


{% endblock %}
