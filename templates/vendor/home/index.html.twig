{% extends 'base.html.twig' %}

{% block title %}Galerie d'arts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>




    <nav class="navbar navbar-dark navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Rounomara</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_vendor_home')}}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_vendor_profile', {'id': app.user.id}) }}">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



            <div class="container text-center">
                <h1>Mon tableau de bord</h1>
                <a class=" btn btn-outline-light mt-5" href="{{ path('vendor_art_new', {'id': app.user.id}) }}" type="button">Mettre une oeuvre en vente</a>

            </div>


    <div class="d-flex justify-content-evenly mt-5">

    <div class="first-div-vendor">
        <h4>Mes oeuvres sur le marché</h4>
        {% for oeuvre in art %}

            {% if app.user.id == oeuvre.vendor %}
                {% if oeuvre.sold is same as false %}
                    <div>

                        <div class="card text-bg-dark mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset('uploads/arts/' ~ oeuvre.imageFile) }}" class="img-fluid rounded-start" alt="nom de l'oeuvre">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ oeuvre.label }}</h5>
                                        <p class="card-text">{{ oeuvre.description }}</p>
                                        <p class="card-text"><small class="text-muted">{{ oeuvre.price }} €</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}

        {% endfor %}
    </div>
        <div class="first-div-vendor">
            <h4>Mes ventes</h4>
            {% for oeuvre in art %}
                {% if app.user.id == oeuvre.vendor and oeuvre.sold is same as true %}
                    <div>

                        <div class=" card text-bg-dark mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset('uploads/arts/' ~ oeuvre.imageFile) }}" class="img-fluid rounded-start" alt="nom de l'oeuvre">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ oeuvre.label }}</h5>
                                        <p class="card-text">{{ oeuvre.description }}</p>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% endfor %}
            <div class=" card text-bg-dark mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('pictories/colors.jpg') }}" class="img-fluid rounded-start" alt="nom de l'oeuvre">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Ma prochaine oeuvre vendue</h5>
                            <p class="card-text">L'oeuvre apparaitra ici</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>





{% endblock %}
