{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Num_card</th>
                <td>{{ payment.numCard }}</td>
            </tr>
            <tr>
                <th>Name_card</th>
                <td>{{ payment.nameCard }}</td>
            </tr>
            <tr>
                <th>Date_limit</th>
                <td>{{ payment.dateLimit ? payment.dateLimit|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Crypto_num</th>
                <td>{{ payment.cryptoNum }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">back to list</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
